<div class="d-flex flex-column align-items-center justify-content-center p-3 bg-white rounded-4 shadow-sm mt-4" style="max-width: 400px; margin: auto;">
  <h2 class="text-primary fw-bold mb-4 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="d-flex justify-content-center gap-2">
      <%= f.label :email, class: "form-label fs-5 fw-semibold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions d-flex justify-content-center w-100">
      <%= f.submit "Send me reset password instructions", class: "btn bg-primary-subtle mt-2 fw-semibold border-0 shadow-sm px-4 rounded-pill" %>
    </div>
  <% end %>
  <div class="mt-3 w-100 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>