<div class="d-flex flex-column align-items-center justify-content-center p-4 bg-light rounded-4 shadow-lg mt-5 border border-2 border-primary-subtle mb-4"
     style="max-width: 420px; margin: auto;">
  <h2 class="text-primary mb-4 fw-bold fs-3">üîê Welcome!</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-100" }) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label fw-semibold text-secondary" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-pill shadow-sm py-2 px-3" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label fw-semibold text-secondary" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control rounded-pill shadow-sm py-2 px-3" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
        <%= f.label :remember_me, class: "form-check-label text-muted", for: "remember_me" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= f.submit "Log In", class: "btn btn-primary w-100 rounded-pill py-2 fw-bold shadow-sm" %>
    </div>
  <% end %>

  <div class="mt-4 w-100 text-center small">
    <%= render "devise/shared/links" %>
  </div>
</div>
