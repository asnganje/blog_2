<div class="d-flex flex-column align-items-center justify-content-center p-3 bg-white rounded-4 shadow-sm mt-4" style="max-width: 400px; margin: auto;">
  <h2 class="text-primary mb-4 fw-bold">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-1 w-100">
      <%= f.label :email, class: "form-label fw-semibold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-1 w-100">
      <%= f.label :password, class: "form-label fw-semibold" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions d-flex justify-content-center mt-3">
      <%= f.submit "Log in", class: "btn bg-primary-subtle btn-lg w-60" %>
    </div>
  <% end %>
  <div class="mt-3 w-100 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>