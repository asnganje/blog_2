<div class="d-flex flex-column align-items-center justify-content-center p-4 bg-light rounded-4 shadow-lg mt-3 mb-4 border border-2 border-primary-subtle"
     style="max-width: 450px; margin: auto;">
  <h2 class="text-primary mb-4 fw-bold fs-3">ğŸ“ Create an Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-100" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label fw-semibold text-secondary" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control rounded-pill shadow-sm py-2 px-3" %>
    </div>
    <div class="mb-3">
      <%= f.label :bio, class: "form-label fw-semibold text-secondary" %>
      <%= f.text_field :bio, autofocus: true, autocomplete: "bio", class: "form-control rounded-pill shadow-sm py-2 px-3" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label fw-semibold text-secondary" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control rounded-pill shadow-sm py-2 px-3" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label fw-semibold text-secondary" %>
      <% if @minimum_password_length %>
        <div class="form-text mb-1 text-muted">At least <%= @minimum_password_length %> characters</div>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-pill shadow-sm py-2 px-3" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label fw-semibold text-secondary" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-pill shadow-sm py-2 px-3" %>
    </div>

    <div class="text-center mt-4">
      <%= f.submit "Sign Up", class: "btn btn-primary w-100 rounded-pill py-2 fw-bold shadow-sm" %>
    </div>
  <% end %>

  <div class="mt-4 w-100 text-center small">
    <%= render "devise/shared/links" %>
  </div>
</div>
