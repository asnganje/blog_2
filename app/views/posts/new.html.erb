<div class="container my-5">
  <div class="card shadow-sm border-0 rounded-4 p-4 bg-light">
    <h2 class="mb-4 text-center text-primary">ğŸ“ Add a New Post</h2>

    <%= form_with(model: @post, url: user_posts_path(current_user.id), class: "mx-auto", local: true) do |form| %>
      
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <h5><i class="bi bi-exclamation-circle-fill"></i> The following <%= pluralize(@post.errors.count, 'error') %> prevented the post from being saved:</h5>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :title, class: "form-label fw-semibold fs-5" %>
        <%= form.text_field :title, placeholder: "Enter title here", class: "form-control form-control-lg shadow-sm" %>
      </div>

      <div class="mb-3">
        <%= form.label :text, class: "form-label fw-semibold fs-5" %>
        <%= form.text_area :text, placeholder: "Write your post content...", rows: 6, class: "form-control shadow-sm" %>
      </div>

      <%= form.hidden_field :author_id, value: current_user.id %>

      <div class="text-center mt-4">
        <%= form.submit "Create Post", class: "btn btn-success px-5 py-2 fs-6 shadow-sm" %>
      </div>
    <% end %>
  </div>
</div>
