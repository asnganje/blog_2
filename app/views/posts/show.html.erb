<h2>Post details</h2>
<div class="card">
  <div class="d-flex justify-content-between">
    <h4><%= @post.title %> by <%= @post.author.name %></h4>
    <h6 class="text-muted">Comments: <%=@post.comments_counter%> Likes: <%=@post.likes_counter%></h6>
  </div>
  <div>
    <p><%=@post.text%></p>
  </div>
</div> 
  <div class="card mt-1">
    <%@post.comments.each do |comment|%>
      <p><%=comment.user.name%>: <%=comment.text%></p>
    <%end%>
  </div>
