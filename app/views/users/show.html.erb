<h2>User details</h2>
<div class="card f-flex flex-row w-100">
  <div class="w-33" style="flex: 1; overflow: hidden;">
    <img src="..." class="card-img-top" alt="..." style="width: 100%; height: auto;">
  </div>
  <div class="card-body d-flex flex-column justify-content-between h-100" style="width: 66.66%; padding: 1rem;">
    <h5 class="card-title">
      <p class="text-decoration-none fs-4 fw-bold"><%=@user.name%></p>
    </h5>
    <h6 class="text-end text-muted"><%= link_to "Number of Posts", user_posts_path(@user) %>: <%=@user.posts_counter %></h6>
  </div>
</div>
<div>
  <div class="card mt-2 mb-2">
    <p>Bio:</p>
    <p><%= @user.bio%></p>
  </div>
  <div>
    <% @user.posts.each do |post| %>
      <div class="card">
        <h4><%= post.title %><h3>
        <h5><%= post.text %><h3>
        <h6 class="text-end text-muted">Comments: <%=post.comments_counter%> Likes: <%=post.likes_counter%></h6>
      </div>
    <%end%>
  </div>
</div>