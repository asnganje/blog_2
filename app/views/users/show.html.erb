<h2 class="my-4 text-center fw-bold fs-2">User Details</h2>

<div class="card mb-4 shadow-sm rounded-4 d-flex flex-row flex-wrap">
  <div class="col-4 p-0">
    <%= image_tag "https://ui-avatars.com/api/?name=#{ERB::Util.url_encode(@user.name)}&background=0D8ABC&color=fff",
        class: "img-fluid rounded-start h-100 object-fit-cover",
        alt: "#{@user.name}'s avatar" %>
  </div>
  <div class="col-8 p-4 d-flex flex-column justify-content-between">
    <h5 class="fw-bold fs-4 mb-2"><%= @user.name %></h5>
    <div class="text-end mt-auto">
      <%= link_to "Number of Posts", user_posts_path(@user),
        class: "text-muted text-decoration-none fw-semibold" %>:
      <span class="badge bg-secondary"><%= @user.posts_counter %></span>
    </div>
  </div>
</div>

<div class="card mb-4 shadow-sm rounded-4 p-4">
  <h5 class="fw-bold mb-2">Bio:</h5>
  <p class="fs-5 mb-0"><%= @user.bio %></p>
</div>

<div class="mt-4">
  <% @user.posts.each do |post| %>
    <div class="card mb-3 shadow-sm rounded-4 p-3">
      <h4 class="fs-3 fw-bold mb-0">
        <%= link_to post.title, user_post_path(post.author, post), class: "text-decoration-none text-dark" %>
      </h4>
      <p class="fs-5 mb-3"><%= post.text %></p>
      <div class="text-end text-muted small">
        Comments: <%= post.comments_counter %> &nbsp;|&nbsp; Likes: <%= post.likes_counter %>
      </div>
    </div>
  <% end %>
</div>
