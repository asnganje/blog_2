<div class="d-flex justify-content-between align-items-center my-4">
  <h1 class="display-6">Users List</h1>
  <%=link_to "Add a new post", new_user_post_path(current_user.id), class: "btn btn-primary px-4"%>
</div>
<div class="row gy-4">
  <% @users.each do |user| %>
  <div class="col-md-6">
    <div class="card shadow-sm h-100 border-0">
      <div class="row g-0 h-100">
        <div class="col-4">
          <%= image_tag "https://ui-avatars.com/api/?name=#{ERB::Util.url_encode(user.name)}&background=0D8ABC&color=fff",
          class:"img-fluid rounded-start h-100 object-fit-cover",
          alt:"#{user.name}'s avatar" %>
        </div>
        <div class="col-8">
          <div class="card-body d-flex flex-column justify-content-between h-100">
            <div>
              <h5 class="card-title mb-2">
                <%=link_to user.name, user_path(user),
                class:"text-decoration-none text-dark fw-bold"
                %>
              </h5>
            </div>
            <%=link_to "Number of Posts: #{user.posts_counter}", user_posts_path(user), class:"card-text text-end text-muted" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>